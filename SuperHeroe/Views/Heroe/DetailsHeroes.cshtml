@model Task<SuperHeroe.Data.Models.Heroe>
@{
    ViewData["Title"] = "DetailsHeroes";
}




<link href="~/lib/bootstrap/dist/css/Profile.css" rel="stylesheet" />

<div class="container emp-profile">
    @*<form method="post">*@
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="@Model.Result.Image.Url" alt="" />
                   
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head">
                    <h5>
                        @Model.Result.Name
                    </h5>
                    
                   
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="powerstats-tab" data-toggle="tab" href="#powerstats" role="tab" aria-controls="powerstats" aria-selected="true">Power Stats</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="appearance-tab" data-toggle="tab" href="#appearance" role="tab" aria-controls="appearance" aria-selected="false">Appearance</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="work-tab" data-toggle="tab" href="#work" role="tab" aria-controls="work" aria-selected="false">Work</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="connections-tab" data-toggle="tab" href="#connections" role="tab" aria-controls="connections" aria-selected="false">Connections</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-md-2">
              
                <a asp-controller="Home" asp-action="Index" asp-route-searchString="@Model.Result.ValueSearch" class="profile-edit-btn">Regresar</a>

            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="profile-work">
                   
                    <p><strong>BIOGRAPHY</strong></p>
                    <a href=""><strong>Full Name: </strong>@Model.Result.Biography.FullName</a><br />
                    <a href=""><strong>Alter Ego: </strong>@Model.Result.Biography.AlterEgo</a><br />
                    <a href="">
                        <strong>Aliases:</strong>

                        @{
                            string alias = string.Join(", ", Model.Result.Biography.Aliases);
                            @alias
                        }
                    </a><br />
                    <a href=""><strong>Place of birth: </strong>@Model.Result.Biography.PlaceOfBirth</a><br />
                    <a href=""><strong>First Appearance: </strong>@Model.Result.Biography.firstappearance</a><br />
                    <a href=""><strong>Publisher: </strong>@Model.Result.Biography.Publisher</a><br />
                    <a href=""><strong>Alignment: </strong>@Model.Result.Biography.Alignment</a><br />
                    @*<a href="">Bootsnipp Profile</a><br />*@



                </div>
            </div>
            <div class="col-md-8">
                <div class="tab-content profile-tab" id="myTabContent">
                    <div class="tab-pane fade show active" id="powerstats" role="tabpanel" aria-labelledby="powerstats-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Intelligence</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Intelligence </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Strength</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Strength</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Speed</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Speed</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Durability</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Durability</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Power</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Power</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Combat</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Powerstats.Combat</p>
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="appearance" role="tabpanel" aria-labelledby="appearance-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Gender</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Appearance.Gender</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Race</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Appearance.Race</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Height</label>
                            </div>
                            <div class="col-md-6">
                                <p>

                                    @{
                                        string heigth = string.Join(", ", Model.Result.Appearance.Height);
                                        @heigth
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>weight</label>
                            </div>
                            <div class="col-md-6">
                                <p>
                                    @{
                                        string weight = string.Join(", ", Model.Result.Appearance.Weight);
                                        @weight
                                    }
                                </p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Eye Color</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Appearance.EyeColor</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Hair Color</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Appearance.HairColor</p>
                            </div>
                        </div>

                    </div>


                    <div class="tab-pane fade " id="work" role="tabpanel" aria-labelledby="work-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Occupation</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Work.Occupation</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>Base</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Work.Base</p>
                            </div>
                        </div>


                    </div>


                    <div class="tab-pane fade " id="connections" role="tabpanel" aria-labelledby="connections-tab">
                        <div class="row">
                            <div class="col-md-6">
                                <label>Group Affiliation</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Connections.GroupAffiliation</p>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <label>relatives</label>
                            </div>
                            <div class="col-md-6">
                                <p>@Model.Result.Connections.Relatives</p>
                            </div>
                        </div>


                    </div>

                </div>
            </div>


            
        </div>
    @*</form>*@
</div>